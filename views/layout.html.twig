<!DOCTYPE html>
<html lang="fr">
  <head>

    <meta charset="utf-8">
    <link rel="icon" href="">

    <title>{% block title %}{% endblock %}</title>

    {% block stylesheets %}
        <link href="{{ app.request.basepath }}/css/bootstrap.min.css" rel="stylesheet">
        <link href="{{ app.request.basepath }}/css/bootstrap-theme.min.css" rel="stylesheet">
        <link href="{{ app.request.basepath }}/css/GSB.css" rel="stylesheet">
        <link href="{{ app.request.basepath }}/css/font-awesome.min.css" rel="stylesheet">
    {% endblock %}

  </head>

  <body>

    <nav class="navbar navbar-inverse navbar-fixed-top">
      <div class="container-fluid">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="#">GSB</a>
        </div>
        <div id="navbar" class="navbar-collapse collapse">
          <ul class="nav navbar-nav navbar-right">
		{% if app.security.token and is_granted('IS_AUTHENTICATED_FULLY') %}
			<li class="dropdown">
                <li><p class="navbar-text">
                    {{ app.security.token.user.username }}
                </p></li>
                <li><a href="{{ path('admin_logout') }}">
                    Log out
                </a></li>
            </li>
		{% else %}
			<li><p class="navbar-text">
                    Not connected
                </p>
            </li>
		{% endif %}
				  </ul>
				</div>
			  </div>
			</nav>
		{% if app.security.token and is_granted('IS_AUTHENTICATED_FULLY') %}
			<div class="container-fluid">
			  <div class="row">
				<div class="col-sm-3 col-md-2 sidebar">
				  <ul class="nav nav-sidebar">
					<li><a href="#">Test</a></li>
					<li><a href="#">Damn</a></li>
				  </ul>
				</div>
			  </div>    
			</div>
		{% endif %}

    <div class="container">{% block content %}{% endblock %}</div>

    {% block javascript %}
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
    <script src="../../dist/js/bootstrap.min.js"></script>

    {% endblock %}

  </body>
</html>
